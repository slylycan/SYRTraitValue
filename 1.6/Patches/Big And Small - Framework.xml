<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod"><!-- Checks for this mod, if not active there is no reason to add values -->
		<mods>
			<li>[SYR] Trait Value</li> 
			<li>[SYR] Trait Value (Continued)</li>
		</mods>
		
		<!--If [SYR]Trait Value exists then run the following operations-->
		<match Class="PatchOperationSequence">
			<operations>
			
				<!--Big and Small - Framework-->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Big and Small - Framework</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "BS_Giant"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>10</li>
										</traitValues>
									</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
								
			</operations>
		</match>
	</Operation>
</Patch>