<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod"><!-- Checks for this mod, if not active there is no reason to add values -->
		<mods>
			<li>[SYR] Trait Value</li> 
			<li>[SYR] Trait Value (Continued)</li>
		</mods>
		
		<!--If [SYR]Trait Value exists then run the following operations-->
		<match Class="PatchOperationSequence">
			<operations>

				<!--Big and Small - Genes & More-->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Big and Small - Genes &#38; More</li>
					</mods>			
					<match Class="PatchOperationSequence">
						<operations>
							<!--Traits_Other-->
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "Passioned_Learning"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>10</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "Very_Passioned_Learning"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>20</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "BS_AnimalFriend"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>20</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "BS_AlcoholAddict"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>0</li><!--Unsure if this trait is working as intended, so assigned a neutral value-->
										</traitValues>
									</li>
								</value>
							</li>

							<!--Traits_Personality-->
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "BS_Gentle"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>10</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "BS_InsultProof"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>10</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "BS_Unpretentious"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>10</li>
										</traitValues>
									</li>
								</value>
							</li>

							<!--Traits_Size-->
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "Gigantism"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>10</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "Large"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>5</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "Small"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>-5</li>
										</traitValues>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>*/TraitDef[defName = "Dwarfism"]</xpath>
								<value>
									<li Class="SyrTraitValue.TraitValueExtension">
										<traitValues>
											<li>-10</li>
										</traitValues>
									</li>
								</value>
							</li>
							
						</operations>
					</match>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>